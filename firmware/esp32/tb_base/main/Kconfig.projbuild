config TB_WIFI_PASS
    string "WiFi Password"
    default "discovery"

config TB_TCP_PORT
    int "TCP Server Port"
    default 9000

config TB_ROBOT_ID
    string "Robot ID (shown on OLED)"
    default "tb_01"

