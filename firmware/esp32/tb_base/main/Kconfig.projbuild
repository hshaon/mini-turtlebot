    int "Left Motor PWM GPIO"
    default 4

config TB_MOTOR_DIR_L
    int "Left Motor DIR GPIO"
    default 5

config TB_MOTOR_PWM_R
    int "Right Motor PWM GPIO"
    default 6

config TB_MOTOR_DIR_R
    int "Right Motor DIR GPIO"
    default 7

